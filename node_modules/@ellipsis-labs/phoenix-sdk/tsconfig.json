{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es2015",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "types": ["mocha", "node"],
    "paths": {
      "@instructions/*": ["instructions/*"],
      "@types/*": ["types/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "examples/**/*.ts"]
}
